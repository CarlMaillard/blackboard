<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>BlackBoard</title>

    <!-- Bootstrap core CSS-->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Page level plugin CSS-->
    <link href="vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin.css" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.css"></link>
    


  </head>

  <body id="page-top">


      <!-- Navbar -->
      <%- include('header'); %>


    <div id="wrapper">

      <!-- Sidebar -->
      <%- include('sidebar'); %>

      <div id="content-wrapper">

        <div class="container-fluid">



          <div class="row">

            <div class="card col-12 col-md-4 mb-3 chart">

                <div class="card-hearder">
                  <i class="fas fa-chart-pie"></i>
                  nombre d'utilisateurs par sexe
                </div>
                <div class="card-body">
                  <canvas data-female="<%=numFemale%>" data-male="<%=numMale%>" id="chartBar" width="100" height="100"></canvas>
                </div>

            </div>

            <div class="card col-12 col-md-4 mb-3 chart">

              <div class="card-hearder">
                <i class="fas fa-chart-pie"></i>
                nombre de messages lu et non lu
              </div>
              <div class="card-body">
                <canvas data-Lu="<%=messLu%>" data-nonLu="<%=messNonlu%>"  id="doughnut" width="100" height="100"></canvas>
              </div>

            </div>
            
            <div class=" card col-12 col-md-4 mb-3 chart"> 
              
              <div class="card-hearder">
                <i class="fas fa-chart-pie"></i>
               commandes expédiées / non expédiées
              </div>
              <div class="card-body">
                <canvas data-exp="<%=exp%>" data-nonexp="<%=nonExp %>"  id="chartpie" width="100" height="100"></canvas>
              </div>
            </div>

            <div class=" card col-12 col-md-4 mb-3 chart"> 
              
              <div class="card-hearder">
                <i class="fas fa-chart-pie"></i>
                chiffre d’affaires par mois
              </div>
              <div class="card-body">
                <canvas data-chartviz="<%=JSON.stringify(totalCAByMonth)%>"  id="linechart" width="100" height="100"></canvas>
              </div>
              
            </div>
          </div>

        </div>
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        <footer class="sticky-footer">
          <div class="container my-auto">
            <div class="copyright text-center my-auto">
              <span>Copyright © Blackboard</span>
            </div>
          </div>
        </footer>

      </div>
      <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->



    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Page level plugin JavaScript-->
    <script src="vendor/chart.js/Chart.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin.min.js"></script>

    <!-- dataViz -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.bundle.js"></script>

    <script src="js/dataviz.js" ></script>

    

  </body>

</html>
